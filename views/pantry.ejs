<h1 class="center head">My pantry</h1>
    
    <div class="container">
    <form class="form-inline my-2" action="/recipe/food" method="post">
        <input class="form-control" type="text" placeholder="ingredient" name="ingredient">
        <button class=" pantry-btn btn btn-lg btn-primary" type="submit">Add to Pantry</button>
    </form>
    <div>
        <div>
            <div class="mr-auto" data-toggle="">
                <h3>My pantry has:</h3>
               <div class="" id="">
                   <% data.apple.forEach(function(fridge) { %>
                       <div class="bop">
                           <form class="form-inline" action="/recipe/del" method="POST">
                               <input class="pantry-font" hidden type="text" name="name" id="<%= fridge.id %>" value="<%= fridge.id %>">
                               <button class="fridge-button delPantry btn-outline-dark" type="submit">✖️</button>
                           </form>
                           <ul>
                               
                           </ul>
                       <p class="dropdown-item"><%= fridge.ingredients %></p>
                       </div>
                       <br />
                   <% }) %>
               </div>
           </div>
        </div>
    </div>

</div>